<div class="panel panel-info">
  <div class="panel-heading"><h3>Industry List</h3></div>
  <div class="panel-body">
    <div class="row">
      <% @industries.each do |industry| %>
        <div class="col-md-4 col-sm-6">
          <%= link_to industry[:name], industry_jobs_path(industry[:id]) %> ( <%= industry[:count] %> )
        </div>
      <% end %>
    </div>
  </div>
</div>