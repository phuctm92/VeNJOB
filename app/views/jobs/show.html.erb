<div class="page-header">
  <div class="clearfix">
    <div class="pull-left"><h1><%= @job.title %></h1></div>
    <div class="pull-right"><%= link_to 'Apply', "#", class:"btn btn-primary" %></div>
  </div>
</div>
<div class="well">
  <h4>Company: <%= @job.company.name %></h4>
  <div class="row">
    <h4 class="col-md-4">Location: <%= @job.city.name %></h4>
    <h4 class="col-md-4">Salary: <%= @job.salary %></h4>
  </div>
  <p><%= raw @job.description %></p>
</div>
