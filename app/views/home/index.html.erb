<%= image_tag 'banner', class:"img-responsive" %>
<div class="text-center total">
  Total Jobs: <%= @total_jobs %><hr>
</div>
<%= render 'shared/search' %><hr>

<div class="panel panel-info">
  <div class="panel-heading"><h3>Latest Jobs</h3></div>
  <div class="clearfix">
    <% @latest_jobs.each do |job| %>      
    <div class="panel-body">
      <div class="row">
        <div class="col-md-8 col-sm-8">
          <h4 class="wrap-content"><%= job.title %></h4>
          <p class="wrap-content"><%= job.company.name %></p>
        </div>
        <div class="col-md-4 sol-sm-4">
          <p><%= fa_icon "usd" %> <%= job.salary %></p>
          <p><%= fa_icon "map-marker" %> <%= job.city.name %></p>
        </div>
      </div>
    </div><hr>  
    <% end %>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a data-toggle="collapse" href="#collapse_cities"><h3>Top Cities</h3></a>
    </h4>
  </div>
  <div id="collapse_cities" class="panel-collapse collapse">
    <div class="panel-body">
      <div class="row">
      <% @cities.each do |city| %>
        <div class="col-md-4 col-sm-6">
          <%= city.name %> ( <%= city.jobs_count %> )
        </div>
      <% end %>
      </div>
      <div class="pull-right">
        <a href="#">More...</a>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a data-toggle="collapse" href="#collapse_industries"><h3>Top Industries</h3></a>
    </h4>
  </div>
  <div id="collapse_industries" class="panel-collapse collapse">
    <div class="panel-body">
      <div class="row">
      <% @industries.each do |industry| %>
        <div class="col-md-4 col-sm-6">
          <%= industry.name %> ( <%= industry.jobs_count %> )
        </div>
      <% end %>
      </div>
      <div class="pull-right">
        <a href="#">More...</a>
      </div>
    </div>
  </div>
</div>
